<tr>
    <td class="index-table-key">
        <%= link_to @machine.name, @machine %>
    </td>
    <td class="index-table-value">
    <% if @machine.location %>
        <%= link_to @machine.location.name, location_path(@machine.location_id) %>
    <% end %></td>
                
    <td class="index-table-edit">
                  
    <%= link_to "Edit this machine", edit_machine_path(@machine), class: "text-indigo-600 hover:text-indigo-900" %><span class="sr-only"></span>
    </td>
</tr>