<!-- This example requires Tailwind CSS v2.0+ -->
    
    

<div class="card-component">
  <div class="card-header">
    <!-- Content goes here -->
    <!-- We use less vertical padding on card headers on desktop than on body sections -->
    
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900">Machine</h3>
    </div>
  </div>
  <div class="card-body">
    <!-- Content goes here -->
    <%= render(Machines::MachineComponent.new(@machine)) %>
  </div>
  <div class="card-footer">
    <!-- Content goes here -->
    <!-- We use less vertical padding on card footers at all sizes than on headers or body sections -->
    <%= link_to "Edit this machine", edit_machine_path(@machine), class: "mt-2 link-crud" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this machine", machine_path(@machine), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Back to machines", machines_path, class: "ml-2 link-crud" %>
  </div>
</div>