<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Vessels" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Vessels</h1>
    <%= link_to "New vessel", new_vessel_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="vessels" class="min-w-full">
    <% @vessels.each do |vessel| %>
      <%= render vessel %>
      <p>
        <%= link_to "Show this vessel", vessel, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
